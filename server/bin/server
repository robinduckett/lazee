#!/usr/bin/env coffee

dnode = require('dnode')

d = dnode.connect(5001)

d.on 'remote', (remote) ->
    remote.process
        type: 'unrar'
        path: '/Users/robin/Downloads/Wreck-It.Ralph.2012.DVDRip.XviD-RiPS/wreck-it.ralph.dvdrip.xvid.rar'
        dest: '/Users/robin/dev/lazee/tmp/wreck-it.ralph.dvdrip.xvid'
        created: new Date()
        
    setTimeout(() ->
        remote.getJobs (jobs) ->
            console.log('jobs: ')
            console.log(jobs);
    , 78*1000)
    
    start = 80
    
    si = setInterval(() ->
        console.log start--
        if start < 0 then process.exit()
    , 1000)